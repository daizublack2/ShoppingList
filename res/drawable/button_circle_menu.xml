<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 円ボタン（メニュー） 
    button_circle_menu-->
    
<!--======================================== 
          ボタンが押されたとき
    ======================================== -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- 「円」背景:薄い赤 -->
            <item>
                <shape android:shape="ring"
                    android:innerRadius="0dp"
                    android:thickness="17dp"
                    android:useLevel="false"
                    >
                    <solid 
                        android:color="@color/palered" />
                </shape>
            </item>
            <!-- 上部のポチ(白) -->
            <item android:bottom="12dp" 
                android:right="17dp"
                android:left="17dp">
                <shape android:shape="line">
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                </shape>
            </item>
            <!-- 中央のポチ(白) -->
            <item 
                android:right="17dp"
                android:left="17dp">
                <shape android:shape="line">
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                </shape>
            </item>
            <!-- 下部のポチ(白) -->
            <item android:top="12dp" 
                android:right="17dp"
                android:left="17dp">
                <shape android:shape="line">
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    
<!--======================================== 
          通常状態 
    ======================================== -->
    <item>
        <layer-list>
            <!-- 「円」背景:濃赤 -->
            <item>
                <shape android:shape="ring"
                    android:innerRadius="0dp"
                    android:thickness="17dp"
                    android:useLevel="false" >
                    <solid 
                        android:color="@color/firebrick" />
                </shape>
            </item>
            <!-- 上部のポチ(白) -->
            <item android:bottom="12dp" 
                android:right="17dp"
                android:left="17dp">
                <shape android:shape="line">
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                </shape>
            </item>
            <!-- 中央のポチ(白) -->
            <item 
                android:right="17dp"
                android:left="17dp">
                <shape android:shape="line">
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                </shape>
            </item>
            <!-- 下部のポチ(白) -->
            <item android:top="12dp" 
                android:right="17dp"
                android:left="17dp">
                <shape android:shape="line">
                    <stroke
                        android:width="4dp"
                        android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>