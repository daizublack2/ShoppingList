<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">  

<!--======================================== 
          ボタンが押されたとき
    ======================================== -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- 背景：ピンク -->
            <item
        		android:bottom="2dp" 
        		android:left="2dp" 
        		android:right="2dp" 
        		android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/cherrypink" />
            		<corners 
                		android:bottomLeftRadius="20dp" 
                		android:bottomRightRadius="20dp" 
                		android:topRightRadius="20dp" 
                		android:topLeftRadius="20dp" />
                </shape>
            </item>
            <!-- 枠：濃赤点線　　角：丸く -->
            <item 
                android:bottom="4dp" 
                android:left="4dp" 
                android:right="4dp" 
                android:top="4dp">
                <shape android:shape="rectangle">
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/firebrick" 
                        android:dashWidth="4dp" 
                        android:dashGap="2dp" />
            		<corners 
                		android:bottomLeftRadius="20dp" 
                		android:bottomRightRadius="20dp" 
                		android:topRightRadius="20dp" 
                		android:topLeftRadius="20dp" />
            		<padding 
            		    android:right="16dp" 
            		    android:left="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>  
        
<!--======================================== 
          通常状態 
    ======================================== -->
    <item>
        <layer-list>
            <!-- 背景：麦 -->
            <item
        		android:bottom="2dp" 
        		android:left="2dp" 
        		android:right="2dp" 
        		android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/wheat" />
            		<corners 
                		android:bottomLeftRadius="20dp" 
                		android:bottomRightRadius="20dp" 
                		android:topRightRadius="20dp" 
                		android:topLeftRadius="20dp" />
                </shape>
            </item>
            <!-- 枠：濃赤点線　　角：丸く -->
            <item 
                android:bottom="4dp" 
                android:left="4dp" 
                android:right="4dp" 
                android:top="4dp">
                <shape android:shape="rectangle">
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/firebrick" 
                        android:dashWidth="4dp" 
                        android:dashGap="2dp" />
            		<corners 
                		android:bottomLeftRadius="20dp" 
                		android:bottomRightRadius="20dp" 
                		android:topRightRadius="20dp" 
                		android:topLeftRadius="20dp" />
            		<padding 
            		    android:right="16dp" 
            		    android:left="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>  
