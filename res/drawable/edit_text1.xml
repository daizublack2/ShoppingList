<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--======================================== 
         フォーカス時
    ======================================== -->
    <item android:state_focused="true">
        <layer-list>
            <!-- 背景色 -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/platine" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/abricot"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
    
    
<!--======================================== 
          通常状態 
    ======================================== -->
    <item>
        <layer-list>
            <!-- 下線 -->
            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/abricot"
                        android:dashWidth="3dp"
                        android:dashGap="6dp"
                        />
                    <padding 
                        android:bottom="5dp" 
                        android:left="10dp" 
                        android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>