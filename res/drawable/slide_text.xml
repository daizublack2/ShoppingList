<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<!-- 48dp想定 -->


<!--======================================== 
          ボタンが押されたとき
    ======================================== -->
    <item android:state_pressed="true"><layer-list>
    <item>
        <shape android:shape="rectangle" >
            <solid
                android:color="@color/cherrypink"
                />
        </shape>
    </item>
    
    
    <item
        android:top="-3dp"
        android:left="-3dp"
        android:right="-3dp">
        <shape android:shape="rectangle" >
            <stroke
                android:color="@color/firebrick"
                android:width="1dp"
                android:dashWidth="4dp"
                android:dashGap="4dp"
                />
            <padding
                android:left="10dp"
                />
        </shape>
    </item>
    </layer-list></item>



<!--======================================== 
          通常状態 
    ======================================== -->
    <item><layer-list>
