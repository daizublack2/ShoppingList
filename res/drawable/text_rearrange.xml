<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
        
<!--======================================== 
          通常状態 
    ======================================== -->
    <item android:state_focused="true">
        <layer-list>
            <!-- 点線赤 -->
            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp"
                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    
					<stroke
					    android:color="@color/burntorange"
					    android:width="1dp"
					    />
                </shape>
            </item>
        </layer-list>
    </item>
    
    
<!--======================================== 
          通常状態 
    ======================================== -->
    <item>
        <layer-list>
            <!-- 点線赤 -->
            <item
                android:top="-2dp"
                android:right="-2dp"
                android:left="-2dp"
                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    
					<stroke
					    android:color="@color/burntorange"
					    android:width="1dp"
					    android:dashWidth="5dp"
					    android:dashGap="15dp"
					    />
                </shape>
            </item>
            <!-- 点線オレンジ -->
            <item
                android:top="-2dp"
                android:right="-17dp"
                android:left="-2dp"
                >
                <shape android:shape="rectangle">
					<stroke
					    android:color="@color/cherrypink"
					    android:width="1dp"
					    android:dashWidth="5dp"
					    android:dashGap="15dp"
					    />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>  
