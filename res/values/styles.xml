<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowTitleSize">5dp</item>
    </style>

    
    
    <!-- Application theme. -->
    <!-- android:Theme.Holo.NoActionBar -->
    <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:windowEnableSplitTouch">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Help画面 -->
    <drawable name="backgroundTransparent">#7F000000</drawable>
    <style name="Theme.HelpOverlay" parent="@style/MyTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/backgroundTransparent</item>
    </style>
</resources>
